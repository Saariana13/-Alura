<h1>CALCULAR PUNTAJE DE UN EQUIPO DE FUTBOL</h1> 
<br>

<script>

	function SaltarLinea() {

		document.write("<br>");
		document.write("<br>");

	}

	function imprimir(frase) {

		document.write(frase);
		SaltarLinea();

	}


	var victorias = parseInt(prompt("Ingrese la cantidad de victorias: "));
	var empates = parseInt(prompt("Ingrese la cantidad de empates: "));

	var puntosTotal = (victorias * 3) + empates; 

	imprimir("El total de puntos del equipo es: " + puntosTotal);
	

</script>
